<ul>
  <% @list.each do |bookmark| %>
    <div> <a href="<%=bookmark.url%>"> <%= bookmark.title %></a>
    <form action="/delete" method="post">
      <button name="id" type="submit" value="<%=bookmark.id%>">Delete</button>
    </form>

    <form action='/bookmarks/<%= bookmark.id %>/update' method='get'>
      <button name="id" type="submit" value="<%=bookmark.id%>">Update</button>
    </form>

    <form action='/bookmarks/<%= bookmark.id %>/comments/new' method='get'>
      <button name="id" type="submit" value="<%=bookmark.id%>">Comment</button>
    </form>

    <form action='/bookmarks/<%= bookmark.id %>/tags/new' method='get'>
      <button name="id" type="submit" value="<%=bookmark.id%>">Add tag</button>
    </form>
    <div>
    <% unless bookmark.comments.empty? %>
      <h3> comments </h3>
      <% bookmark.comments.each do |comment| %>
        <li> <%= comment.text %> </li>
      <% end %>
    <% end %>
    <% unless bookmark.tags.empty? %>
      <h3> tags </h3>
      <% bookmark.tags.each do |tag| %>
        <li> <%= tag %> </li>
      <% end %>
    <% end %>
  <% end %>
  </div>
</div>
</ul>

<form action="/" method="get">
  <input type="submit" value="Back to home">
</form>